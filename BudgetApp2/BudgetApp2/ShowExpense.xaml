<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp2.ShowExpense"
             xmlns:model="clr-namespace:BudgetApp2" Background="LightGreen">



    <StackLayout>
        
        <ListView x:Name="NotesListView"
                   Margin="20"
                   
                  ItemsSource="{x:Binding showexp}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Expense">
                    <StackLayout>
                        <Label Text="x:Binding CategoryName"/>
                    <Label Text="x123"/>
                    <Label Text="x:Binding CategoryCost"/>

                    </StackLayout>


                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>