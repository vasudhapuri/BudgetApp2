<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp2.ShowExpense">
    


    <ScrollView BackgroundColor="LightCyan">

        <ListView x:Name="CategorieslistView" HasUnevenRows="True" BackgroundColor="LightGray"                               
              SelectionMode="Single" >
            
            <ListView.Header>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button x:Name="Add_EditExpenseButton" Grid.Row="0" Text="Add/Edit Expense" Margin="20" HeightRequest="55" Clicked="Add_EditExpenseButton_Clicked"  />

                    <Label Text="Allowed Budget: " FontAttributes="Bold"  Grid.Row="1" FontFamily="Lobster"  FontSize="20" Margin="5,0,0,0" Grid.ColumnSpan="2" TextColor="Purple"/>
                    <Label Text="1" x:Name="allowedbudget"  Grid.Row="1" FontSize="20" Grid.Column="1" Grid.ColumnSpan="2" Margin="30,0,0,0" TextColor="DodgerBlue"/>

                    <Label Text="Total Spent: "  FontAttributes="Bold"  Grid.Row="2"  FontSize="20"  Grid.ColumnSpan="2" Margin="5,0,0,0"  TextColor="Purple"/>
                    <Label Text="2" x:Name="Totalexpensescost"  FontSize="20" Grid.Row="2" Margin="30,0,0,0" Grid.Column="1" Grid.ColumnSpan="2" TextColor="DodgerBlue"></Label>

                    <Label Text="Amount left: " FontAttributes="Bold"   Grid.Row="3" FontFamily="Lobster"   FontSize="20" Margin="5,0,0,0" Grid.ColumnSpan="2" HorizontalTextAlignment="Start" TextColor="Purple"></Label>
                    <Label Text="3" x:Name="expenseleft"  FontSize="20" Grid.Row="3" Margin="30,0,0,0" Grid.Column="1" Grid.ColumnSpan="2" TextColor="DodgerBlue"></Label>

                    <Label Text="Expense by Category" FontAttributes="Italic" HorizontalTextAlignment="Center" Grid.ColumnSpan="2" Grid.Row="5" TextColor="Teal"  FontSize="Large" FontFamily="Lobster" ></Label>

                    <Label Text="cat1" Margin="5,0,0,0"   Grid.ColumnSpan="2"   Grid.Row="6" FontSize="20" FontAttributes="Bold" TextColor="DeepPink"></Label>
                    <Label Text="123" Margin="30,0,0,0"   FontSize="20" FontAttributes="Bold" Grid.Row="6" Grid.Column="1" TextColor="DodgerBlue" ></Label>

                    <Label Text="cat1" Margin="5,0,0,0"   Grid.ColumnSpan="2"   Grid.Row="7" FontSize="20" FontAttributes="Bold" TextColor="DeepPink"></Label>
                    <Label Text="123" Margin="30,0,0,0"   FontSize="20" FontAttributes="Bold" Grid.Row="7" Grid.Column="1" TextColor="DodgerBlue" ></Label>

                    <Label Text="cat1" Margin="5,0,0,0"   Grid.ColumnSpan="2"   Grid.Row="8" FontSize="20" FontAttributes="Bold" TextColor="DeepPink"></Label>
                    <Label Text="123" Margin="30,0,0,0"   FontSize="20" FontAttributes="Bold" Grid.Row="8" Grid.Column="1" TextColor="DodgerBlue" ></Label>

                    <Label Text="cat1" Margin="5,0,0,0"   Grid.ColumnSpan="2"   Grid.Row="9" FontSize="20" FontAttributes="Bold" TextColor="DeepPink"></Label>
                    <Label Text="123" Margin="30,0,0,0"   FontSize="20" FontAttributes="Bold" Grid.Row="9" Grid.Column="1" TextColor="DodgerBlue" ></Label>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ViewCell Height="100">
                        <Frame  HeightRequest="1000"
                               Padding="1" BackgroundColor="lightgray" >


                            <StackLayout Orientation="Vertical">

                                <StackLayout Orientation="Horizontal" >
                                <Label Text="{x:Binding CategoryName}"
                                    WidthRequest="200" HeightRequest="30"
                                      FontSize="20" TextColor="Purple" Margin="10,0,0,0">
                                    </Label>                                       
                                    <Label
                                    Text="{x:Binding CategoryCost, Mode=OneWay}" 
                                    FontSize="20" 
                                    Margin="90,0,0,0" WidthRequest="100" HeightRequest="30" TextColor="DodgerBlue"                                 
                                    VerticalTextAlignment="Center">
                                    </Label>
                            </StackLayout>


                               
                                <Label Text="{Binding date}" Margin="10,0,0,0" TextColor="Black" FontSize="15" ></Label>

                            </StackLayout>

                            
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </ScrollView>
</ContentPage>