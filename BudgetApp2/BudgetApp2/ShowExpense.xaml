<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp2.ShowExpense"
             xmlns:model="clr-namespace:BudgetApp2" Background="Lightgray">


    <StackLayout>
        <Button x:Name="Add_EditExpenseButton" HorizontalOptions="FillAndExpand" Grid.Row="0" Text="Add Expense" BackgroundColor="LemonChiffon" TextColor="Purple" FontFamily="Lobster"  FontSize="Small" Margin="20" Clicked="Add_EditExpenseButton_Clicked"/>
        <ListView x:Name="ExpenseListView"
                   HeightRequest="500"
                  WidthRequest="500">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Expense">
                    <ImageCell ImageSource="{Binding CategoryImage}" Text="{Binding CategoryName}" Detail="{Binding CategoryCost}" Height="100"></ImageCell>
                    <!--<ImageCell ImageSource="{Binding CategoryImage}" Text="{Binding Name}" Detail="{Binding Amount}" Height="100"></ImageCell>-->
                    <!--<TextCell Text="{Binding Name}" Detail="{Binding Amount}" />-->

                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
    </StackLayout>

</ContentPage>
