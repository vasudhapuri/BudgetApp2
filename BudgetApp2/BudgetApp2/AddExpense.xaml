<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp2.AddExpense">
    <!--<Button Text="hello"/>-->


    <ListView x:Name="ExpensesListView" SelectionMode="Single"
                           HasUnevenRows="True" >


        <ListView.ItemTemplate>
                    <DataTemplate >
                       
                            
                                <StackLayout Orientation="Horizontal">
                                    <Image x:Name="CategoryImage" Source="{x:Binding CategoryImage,Mode=TwoWay}" 
                                    WidthRequest="45" HeightRequest="45"/>

                                 <Label x:Name="ExpenseCategoryLabel"
                                    Text="cat" 
                                    FontSize="20" FontAttributes="Bold"
                                    Margin="12,0,0,0" TextColor="Purple" WidthRequest="100" HeightRequest="60"   
                                         VerticalTextAlignment="Center">
                                    </Label>

                                    
                                    
                                </StackLayout>
                        
                        
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            

 
        
    
    
</ContentPage>