<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp2.AddExpense"
             xmlns:model="clr-namespace:BudgetApp2" BackgroundColor="LightCyan">

    <StackLayout>
        <ListView x:Name="ExpensesListView" ItemsSource="{Binding exp1 ,Mode=TwoWay}"  
                  Margin="20">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Expense">
                    <StackLayout Orientation="Horizontal">
                        <Label      Text="{x:Binding CategoryName}" x:Name="ExpenseCategory"
                                    FontSize="20" FontAttributes="Bold"
                                    Margin="12,0,0,0" TextColor="Purple" WidthRequest="100" HeightRequest="100"/>

            <Label Text="{Binding CategoryCost}" />

            <Editor Text="123" />

    </StackLayout>
    </DataTemplate>
    </ListView.ItemTemplate>
     </ListView>
    </StackLayout>
</ContentPage>